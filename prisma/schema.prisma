generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model CoinWatchlist {
  id        String    @id @default(uuid())
  slug      String
  name      String
  symbol    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  coinData  CoinData?
	@@map("UserCoinList")
}

model CoinData {
  coinList   CoinWatchlist @relation(fields: [coinListid], references: [id], onDelete: Cascade)
  coinListid String       @unique
  price      Float
  marketCap  Float?
  volume     Float?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}