generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CoinWatchlist {
  id        String    @id @default(uuid())
  slug      String
  name      String
  symbol    String
  createdAt DateTime  @default(now())
  coinData  CoinData?

  @@map("UserCoinList")
}

model CoinData {
  id                String             @id @default(uuid())
  coinWatchlist     CoinWatchlist?     @relation(fields: [coinWatchlistId], references: [id], onDelete: Cascade)
  coinWatchlistId   String?            @unique
  priceHistories    CoinPriceHistory[]
  marketCap         Float?
  volume            Float?
  totalSupply       Float?
  maxSupply         Float?
  totalVolume       Float?
  circulatingSupply Float?
  high24h           Float?
  low24h            Float?
  marketCapRank     Int?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model CoinPriceHistory {
  id         String   @id @default(uuid())
  price      Float
  createdAt  DateTime @default(now())
  coinData   CoinData @relation(fields: [coinDataId], references: [id], onDelete: Cascade)
  coinDataId String

  @@map("CoinPriceHistory")
}
